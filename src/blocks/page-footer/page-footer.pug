          source(media='(min-width: 0)', type='image/webp', srcset='img/img-footer-logotype-tablet.webp, img/img-footer-logotype-tablet@2x.webp 2x')
          img(alt='Logo', width='147', height='40', src='../img/img-footer-logotype-tablet.png', srcset='../img/img-footer-logotype-tablet@2x.png 2x')
      ///.logo
      +social()
        +social-link('#', 'tw')(title='Twitor')
          picture
            img(
              alt='Twitor'
              width='18'
              height='14'
              src='data:img/png;base64,'
              srcset='data:img/png;base64, 2x')
        +social-link('#', 'fb')(title='Facebook')
          picture
            img(
