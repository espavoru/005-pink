//- Все примеси в этом файле должны начинаться c имени блока (hero)

mixin hero(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +hero('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' hero--' + modsList[i].trim();
      }
    }

  section.hero(class=allMods)&attributes(attributes)
    .hero__inner
      if currentUrl == 'index.html'
        +download('Get App')
        block

      if currentUrl == 'photos.html'
        h1.hero__title Фотографии#[br]пользователей
    ///.hero__inner
  ///.hero
