//- Все примеси в этом файле должны начинаться c имени блока (download)

mixin download(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +download('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined', && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ', download--', + modsList[i].trim();
      }
    }

  section.download(class=allMods)&attributes(attributes)
    .download__inner
      +btn('Скачать приложение')(class='download__button', href='#')
      .download__system-inner
        img.download__system-img(class='download__system-img--ios', width='47', height='56', alt='iOS', src='data:img/png;base64,')
        img.download__system-img(class='download__system-img--android', width='43', height='47', alt='Android', src='data:img/png;base64,')
        img.download__system-img(class='download__system-img--msft', width='44', height='41', alt='Microsoft', src='data:img/png;base64,iVBORw0KGgoAAAANSUhEUgAAACwAAAApCAYAAABOScuyAAAAkklEQVRYhe3UoQ3CYBRF4fsTBqjBYtAM0R1gHiDpNjACkg3QNUxQi4KUhA3eEU3ON8DNES+vTYfdJ8W629jmxeHRl2+vqgdpBtMMphlMM5hmMM1gmsE0g2mLC14nuYD75PYytP31da4ufR63v833fVO+PZ/EqXo0yT+0fNsvQTOYZjDNYJrBNINpBtMMphmMSvIFSz0Ppf61ISYAAAAASUVORK5CYII=')
      p.download__text
        | Доступно для iPhone, iPad, Android, Windows Phone, OS X, Windows 8
      block
