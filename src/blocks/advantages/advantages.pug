//- Все примеси в этом файле должны начинаться c имени блока (advantages)

mixin advantages(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +advantages('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' advantages--' + modsList[i].trim();
      }
    }

  section.advantages(class=allMods)&attributes(attributes)
    .advantages__inner
      .advantages__items
        .advantages__item
          h2.advantages__title Поднимает настроение
          p.advantages__text Приложение позволит вам победить осеннюю хандру и депрессию буквально в несколько кликов!

        .advantages__item
          h2.advantages__title Меняет мир вокруг
          p.advantages__text Сделайте снимок и украсьте его смайликом или текстовой подписью, чтобы усилить эффект

        .advantages__item
          h2.advantages__title Заводит новых друзей
          p.advantages__text Ставьте лайки, комментируйте, делитесь фотографиями с друзьями и заводите новых
      ///.advantages__items
      .advantages__pictures
        picture.advantages__picture
          source(media='(min-width: 960px)', srcset='img/img-iphone-screen-01-desktop.png')
          img.advantages__img(alt='iPhone screen', src='img/img/img-iphone-screen-01-desktop.png', width='300', height='320')
        picture.advantages__picture
          source(media='(min-width: 960px)', srcset='img/img-iphone-screen-02-desktop.png')
          img.advantages__img(alt='iPhone screen', src='img/img/img-iphone-screen-02-desktop.png', width='300', height='320')
        picture.advantages__picture
          source(media='(min-width: 960px)', srcset='img/img-iphone-screen-03-desktop.png')
          source(media='(min-width: 660px)', srcset='img/img-iphone-screen-tablet.png')
          img.advantages__img(alt='iPhone screen', src='img/img-iphone-screen-mobile.png', width='157', height='320')
      ///.advantages__pictures
      block

    ///.advantages__inner
  ///.advantages
